<resources>
    <!-- Base application theme. -->
    <style name="Theme.Capstone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/cyan_700</item>
        <item name="colorPrimaryVariant">@color/cyan_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_200</item>
        <item name="colorSecondaryVariant">@color/cyan_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Text Color -->
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="actionBarStyle">@style/myDarkTheme</item>
        <item name="android:statusBarColor" >@color/night_color_background</item>
        <item name="background">@color/night_color_background</item>
    </style>
    <!-- Dark Action Bar Theme. -->
    <style name="myDarkTheme" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/white</item>
    </style>
</resources>